[user]
	name = Erik Taubeneck
	email = erik.taubeneck@gmail.com
[alias]
	co = checkout
	lg = !git --no-pager log --color --decorate --all --graph --pretty=oneline --abbrev-commit -30
        uncommit = reset --soft HEAD^
        lgg = !git fetch --all --prune && git lg
        ff = merge --ff-only
        pr = !hub pull-request | xargs open
[apply]
	whitespace = nowarn

[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    autocrlf = input
    editor = emacs
[grep]
    linenumber = true
[push]
    default = simple
